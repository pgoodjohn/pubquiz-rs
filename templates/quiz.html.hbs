<!DOCTYPE html>
<html>

<head>
    <title>Quiz</title>
</head>

<body>
    <h1>{{quiz.date}}</h1>
    <h2>{{quiz.id}}</h2>
    {{#if group}}
    <p>{{group.name}}</p>
    {{else}}
    <form action="/quiz/{{quiz.id}}/signup" method="post">
        <div>
            <label>Group Name</label>
            <input type='string' placeholder='Group Name' name='name' id="name" required />
        </div>
        <button type="submit">Register</button>
    </form>
    {{/if}}
</body>

</html>